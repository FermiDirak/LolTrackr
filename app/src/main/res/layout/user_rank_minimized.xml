<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/userRankMinimizedLayout"
    android:orientation="horizontal"
    android:background="@color/cccwhite"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Space
        android:layout_width="14dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/userRankMinimizedIcon"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/unranked"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/userRankMinimizedQueueType"
        android:layout_gravity="center_horizontal"
        android:text="Solo Queue"
        android:gravity="center"
        android:layout_weight="1"
        android:textColor="@android:color/primary_text_light"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/userRankMinimizedRank"
        android:textColor="@android:color/primary_text_light"
        android:text="SILVER IV"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Space
        android:layout_width="14dp"
        android:layout_height="wrap_content" />

</LinearLayout>