<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkgray"
    tools:context="manuele.bryan.lolwinrate.Activities.SetUpSummonerActivity">

    <LinearLayout
        android:layout_centerVertical="true"
        android:background="@color/primary_material_dark"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="User Profile Set Up"
            android:textSize="26dp"
            android:textColor="@color/textwhite"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/nameInput"
                android:textColor="@color/textwhite"
                android:textColorHint="@color/textgray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:hint="Summoner account name" />


            <!--Todo: customize the spinner's color-->
            <Spinner
                android:id="@+id/regionSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout="@android:layout/simple_spinner_dropdown_item"/>

        </LinearLayout>

        <TextView
            android:text="(your password will never be requested)"
            android:textColor="@color/textgray"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Space
            android:layout_height="50dp"
            android:layout_width="0dp" />

        <Button
            android:textColor="@color/textwhite"
            android:background="@color/material_blue_grey_800"
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="6dp"
            android:text="sumbit" />
    </LinearLayout>

</RelativeLayout>
