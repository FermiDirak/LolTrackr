<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="manuele.bryan.lolwinrate" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application android:name=".Helpers.LolStatsApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".Activities.SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.NoConnectivityActivity"
            android:label="@string/title_activity_no_connectivity"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".Activities.SetUpSummonerActivity"
            android:label="@string/title_activity_set_up_summoner"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.SplashScreenActivity" />
        </activity>
    </application>

</manifest>
